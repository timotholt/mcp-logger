{
  "name": "mcp-logger-monorepo",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/browser-client",
    "packages/node-client",
    "packages/dashboard"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest",
    "build": "npm run build --workspaces",
    "build:browser": "npm run build -w packages/browser-client",
    "build:server": "npm run build -w packages/server",
    "build:dashboard": "npm run build -w packages/dashboard"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "vite": "^5.4.5",
    "vitest": "^2.1.3"
  }
}
