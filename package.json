{
  "name": "mcp-logger-monorepo",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest",
    "bootstrap": "npm install --prefix packages/shared && npm install --prefix packages/server && npm install --prefix packages/browser-client && npm install --prefix packages/node-client && npm install --prefix packages/dashboard",
    "build": "npm run build:shared && npm run build:server && npm run build:browser && npm run build:node && npm run build:dashboard",
    "build:shared": "npm run build --prefix packages/shared",
    "build:server": "npm run build --prefix packages/server",
    "build:browser": "npm run build --prefix packages/browser-client",
    "build:node": "npm run build --prefix packages/node-client",
    "build:dashboard": "npm run build --prefix packages/dashboard"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "vite": "^5.4.5",
    "vitest": "^2.1.3"
  },
  "overrides": {
    "esbuild": "0.25.0",
    "glob": "^10.4.1"
  }
}
